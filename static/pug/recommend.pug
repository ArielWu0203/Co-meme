extends layouts/base.pug

block stylesheets
  link(rel="stylesheet" type="text/css" href="/css/recommend.css")

block header
  include components/header.pug

block main
  include components/sidebar.pug
  include components/tag-card.pug
  include components/user-card.pug
  include components/image-wall.pug
  article.main__container
    +sidebar
    section.main__recommend
      section.main__section.main__tag
        h2.main--subtitle.main__tag--subtitle 你可能會喜歡的標籤?
        button#tag__cards--left.cards__button--left
          img(src="/img/recommend/button-left.svg" width="32" height="32")
        div.main--cards.main__tag--cards
          div#tag__cards--container.cards--container
            each tag in recommendTags
              +tagCard(tag)
        button#tag__cards--right.cards__button--right
          img(src="/img/recommend/button-right.svg" width="32" height="32")
      section.main__section.main__user
        h2.main--subtitle.main__user--subtitle 你可能會喜歡的創作者?
        button#user__cards--left.cards__button--left
          img(src="/img/recommend/button-left.svg" width="32" height="32")
        div.main--cards.main__user--cards
          div#user__cards--container.cards--container
            each user in recommendUsers
              +userCard(user)
        button#user__cards--right.cards__button--right
          img(src="/img/recommend/button-right.svg" width="32" height="32")
      +imageWall('看看最近在流行什麼?', images)

block scripts
  script(src="/js/recommend.js")