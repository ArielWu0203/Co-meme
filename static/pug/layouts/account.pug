extends base.pug

block stylesheets
  link(rel="stylesheet" type="text/css" href="/css/account/common.css")
  block stylesheet
  style.
    .header {
      box-sizing: border-box;
      position: fixed;
      top: 0;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 1.5rem;
      width: 100vw;
      max-width: 100%;
      height: 3.5rem;
      background: #FFFFFF;
      box-shadow: 0px 3px 6px #00000029;
      z-index: 10;
    }
    .header__logo {
      display: block;
      line-height: 0;
    }

block header
  header.header
    a.header__logo(href='/')
      img(src="/img/common/logo.svg" width="106" height="25")

block main
  div.main__foreground
    div.main__slogan
      img.main__slogan--logo(src="/img/common/logo.svg" width="237" height="57")
      h1.main__slogan--title 跨世代的社交網路媒體
      p.main__slogan--subtitle 梗圖文化
      p.main__slogan--subtitle 社群連結
      p.main__slogan--subtitle 長輩圖文化
    block action
  div.main__background
    div.main__background--circle.main__background--circle1
    div.main__background--circle.main__background--circle2

block scripts
